@model FriendMVC.Models.FriendModel

@{
    ViewBag.Title = "create";
}

<h2>Create</h2>

@using (@Html.BeginForm("Create", "Friend", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Id)

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Ime)
        @Html.TextBoxFor(m => m.Ime, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ime)

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MestoZiveenje)
        @Html.TextBoxFor(m => m.MestoZiveenje, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MestoZiveenje)

    </div>

    <button type="submit">Add</button>
    <button type="button">@Html.ActionLink("Back", "ShowFriends")</button>

}

